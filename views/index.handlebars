<div class="container bg">
	
	

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Ready To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        	        								
			          <button class="devour" data-id="{{this.id}}" >Devour It!</button>
			        

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}.{{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form">

			  <div class="form-group">
			    <p>Enter a burger you want to order and click the Submit Order button.</p>
			    <input type="text" name="burger_name" id="br">
			  </div>
			  
			  <button type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>
